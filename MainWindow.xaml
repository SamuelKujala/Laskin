<Window x:Class="Laskin_omatyö.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laskin_omatyö"
        mc:Ignorable="d"
        Title="Laskin" Height="400" Width="300">
    <Grid Margin="0,0,0,-6">

        <TextBox x:Name="textBox" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="234" Height="40" Margin="0,30,0,0" IsReadOnly="True"/>

        <!--Eka rivi -->
        <Button x:Name="btnAC" Content="AC" HorizontalAlignment="Left" Margin="40,87,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="btnAC_Click"/>
        <Button x:Name="btnPros" Content="%" HorizontalAlignment="Left" Margin="95,87,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="ButtonOperationHandler"/>
        <Button x:Name="btnC" Content="C" HorizontalAlignment="Left" Margin="150,87,0,0" VerticalAlignment="Top" Height="45" Width="44" FontWeight="Bold" Click="btnC_Click"/>
        <Button x:Name="btnJako" Content="/" HorizontalAlignment="Left" Margin="205,87,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="ButtonOperationHandler"/>

        <!--Toinen rivi -->
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="40,147,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="95,147,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn9" Content="9" HorizontalAlignment="Left" Margin="150,147,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btnKerto" Content="*" HorizontalAlignment="Left" Margin="205,147,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="ButtonOperationHandler"/>


        <!--Kolmas Rivi-->
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="40,202,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="95,202,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="150,202,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btnMinus" Content="-" HorizontalAlignment="Left" Margin="205,202,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="ButtonOperationHandler"/>

        <!--Neljäs Rivi-->
        <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="40,257,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="95,257,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="150,257,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="205,257,0,0" VerticalAlignment="Top" Height="45" Width="45" FontWeight="Bold" Click="ButtonOperationHandler"/>

        <!--Viides Rivi-->
        <Button x:Name="btn00" Content="00" HorizontalAlignment="Left" Margin="40,312,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="95,312,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonNumberHandler"/>
        <Button x:Name="btnPoint" Content="." HorizontalAlignment="Left" Margin="150,312,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="ButtonOperationHandler"/>
        <Button x:Name="btnSumma" Content="=" HorizontalAlignment="Left" Margin="205,312,0,0" VerticalAlignment="Top" Height="45" Width="45" Background="OrangeRed" FontWeight="Bold" Click="btnSumma_Click"/>
        <Label x:Name ="answer" Content="" HorizontalAlignment="Left" Margin="150,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.2,0.13"/>





    </Grid>
</Window>
